{
    "kind": "collectionType",
    "collectionName": "destinations",
    "info": {
        "singularName": "destination",
        "pluralName": "destinations",
        "displayName": "Destination",
        "description": "Hidden gem destinations across Indonesia"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "richtext"
        },
        "latitude": {
            "type": "decimal"
        },
        "longitude": {
            "type": "decimal"
        },
        "featured_image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "province": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::province.province"
        },
        "seo": {
            "type": "component",
            "repeatable": false,
            "component": "shared.seo"
        }
    }
}