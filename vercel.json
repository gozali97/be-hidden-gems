{
    "version": 2,
    "builds": [
        {
            "src": "vercel-server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "package.json",
                    "config/**",
                    "src/**",
                    "database/**",
                    "public/**",
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/vercel-server.js"
        }
    ],
    "env": {
        "NODE_OPTIONS": "--max_old_space_size=1024"
    }
}